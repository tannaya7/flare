pragma solidity ^0.8.20;
contract DocumentVault {
    // store the owner (deployer) address
    address public owner;
    // structure to store document details
    struct Document {
        string docHash;     // document hash or fingerprint
        uint256 savedAt;    // time when stored
    }
    // array to store all documents
    Document[] public documents;
    // constructor runs only once when contract is deployed
    constructor() {
        owner = msg.sender; // whoever deploys contract becomes owner
    }
    // modifier to allow only owner to use certain functions
    modifier onlyOwner() {
        require(msg.sender == owner, "You are not the owner!");
        _; // continues execution
    }
    // function to add a new document (only owner allowed)
    function addDocument(string memory _docHash) public onlyOwner {
        documents.push(Document(_docHash, block.timestamp));
    }
    // function to check one document by index
    function viewDocument(uint256 i) public view returns (string memory, uint256) {
        require(i < documents.length, "No document found!");
        return (documents[i].docHash, documents[i].savedAt);
    }
}
